<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>
<style name="TextAppearance.Example.Headline1" parent="TextAppearance.AppCompat.Title">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">50sp</item>
    <item name="android:fontFamily">@font/lora_regular</item>
</style>
    <style name="TextAppearance.Example.Body2" parent="TextAppearance.AppCompat.Body2">
